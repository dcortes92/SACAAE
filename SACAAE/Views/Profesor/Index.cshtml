@model IEnumerable<SACAAE.Models.Profesore>

@{
    ViewBag.Title = "Profesores";
    Layout = "~/Views/Shared/Privado.cshtml";
}

<div class="row">
    <h2>Lista de Profesores</h2>
    <div class="span12">
        @if (TempData.ContainsKey("Message"))
        {
            <p class="text-success">@TempData["Message"].ToString()</p>
        }
        <p>
            @Html.ActionLink("Agregar Nuevo", "Crear")
        </p>
    </div>
</div>

<div class="row">
    <div class="span12">
        <table class="table table-bordered table-hover">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Plaza)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HorasEnPropiedad)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Plaza)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HorasEnPropiedad)
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Editar", new { id = item.ID }) |
            @Html.ActionLink("Detalles", "Detalles", new { id = item.ID }) |
            @Html.ActionLink("Borrar", "Eliminar", new { id = item.ID })
                    </td>
                </tr>
            }

        </table>
    </div>

</div>

